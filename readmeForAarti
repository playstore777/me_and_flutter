import 'package:flutter/material.dart';
import 'package:shared_preferences/shared_preferences.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Flutter Demo',
      theme: ThemeData(
        // This is the theme of your application.
        //
        // Try running your application with "flutter run". You'll see the
        // application has a blue toolbar. Then, without quitting the app, try
        // changing the primarySwatch below to Colors.green and then invoke
        // "hot reload" (press "r" in the console where you ran "flutter run",
        // or simply save your changes to "hot reload" in a Flutter IDE).
        // Notice that the counter didn't reset back to zero; the application
        // is not restarted.
        primarySwatch: Colors.blue,
      ),
      home: DummyWidget(),
    );
  }
}

class DummyWidget extends StatefulWidget {
  const DummyWidget({Key key}) : super(key: key);

  @override
  _DummyWidgetState createState() => _DummyWidgetState();
}

class _DummyWidgetState extends State<DummyWidget> {
  bool joke = false;

  @override
  void initState() {
    _getPersistent('joke');
    super.initState();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('test'),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          crossAxisAlignment: CrossAxisAlignment.center,
          children: [
            Text('Joke is : $joke'),
            ElevatedButton(
              child: Text('Click Me!'),
              onPressed: () async {
                return await showDialog(
                  context: context,
                  builder: (context) => AlertDialog(
                    content: Text('Pawri karni hai?'),
                    actions: [
                      TextButton(
                        child: Text('meow'),
                        onPressed: () {
                          setState(
                            () {
                              joke = !joke;
                            },
                          );
                          _savePersistent(joke);
                          print(joke);
                        },
                      ),
                    ],
                  ),
                );
              },
            ),
          ],
        ),
      ),
    );
  }

  void _savePersistent(joke) async {
    SharedPreferences prefs = await SharedPreferences.getInstance();
    prefs.setBool('joke', joke);
  }

  void _getPersistent(key) async {
    SharedPreferences prefs = await SharedPreferences.getInstance();
    joke = prefs.get(key) ?? joke;
  }
}
